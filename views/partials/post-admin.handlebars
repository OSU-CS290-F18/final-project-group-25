<div class="card post post-admin" id="postid-{{id}}">
  <form action="/post/delete" method="POST">
    <input type="number" name="postID" value="{{id}}" style="display: none">
    <button type="submit" id="button-delete-{{id}}">x</button>
  </form>
  <div class="post-image">
      <img src="{{data.photo}}" alt="{{data.alt}}">
  </div>
    <div class="post-title">
    <h2>{{data.title}}</h2>
    <h4>{{data.author}} - {{data.date}}</h4>
  </div>
  <div class="post-body">
    {{#each data.content}}
      <p>{{this}}</p>
    {{/each}}
  </div>
</div>
